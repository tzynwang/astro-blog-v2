---
import BaseHead from '@Components/BaseHead.astro';
import type { Post, Heading } from '@Models/GeneralTypes';

interface Props {
  frontmatter: Post;
  headings: Heading[];
}

const { frontmatter, headings } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={frontmatter.title}
      description={frontmatter.summary || ''}
    />
  </head>
  <body>
    <h1>{frontmatter.title}</h1>
    <p>date: {frontmatter.date}</p>
    <p>tags:</p>
    <ul>{frontmatter.tag.map((tag) => <li>{tag}</li>)}</ul>
    <p>toc:</p>
    <ul>{headings.map((heading) => <li>{heading.text}</li>)}</ul>
    <slot />
  </body>
</html>
